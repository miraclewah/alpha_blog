<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors" %>
            <%= form_with(model: @article, class: "shadow-lg p-3 mb-5 bg-dark rounded", local:true) do |f| %>

                <div class="form-group row">
                    <%= f.label :title ,class:"col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.text_field :title, class:"form-control rounded", placeholder:"Title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description ,class:"col-2 col-form-label text-white" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows:10 ,class:"form-control rounded", placeholder:"Description of article" %>
                    </div>
                </div>     

                <div class="form-group row justify-content-center">
                    <%= f.submit class:"btn btn-success btn-lg" %>
                </div>
                
            <% end %>
        </div>
    </div>
    <div class="row justify-content-center">
        <%= link_to '[ Cancel and return ]', articles_path %>
    </div>
</div>